<%= form_for(@scenario,remote: true) do |f| %>
  <% if @scenario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scenario.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @scenario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :feature %>
    <%= f.text_field :feature ,html: { placeholder: "Enter feature name..." }%>
  </div>
  <div class="form-group">
    <%= f.label Scenario %>
    <%= f.text_area :name %>
  </div>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status,@scenario.status_options %>
  </div>
  <div class="form-group">
    <%= f.label :assignee %>
    <%= f.select :assignee,@userNames %>
  </div>
  <div class="form-group">
    <%= f.submit "Ok" %>
    <%= link_to "Cancel", scenarios_path %>
  </div>
<% end %>
