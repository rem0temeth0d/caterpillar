<%= form_for(@scenario) do |f| %>
  <% if @scenario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scenario.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @scenario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :feature %><br />
    <%= f.text_field :feature %>
  </div>
  <div class="field">
    <%= f.label Scenario %><br />
    <%= f.text_area :name %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status,@scenario.status_options %>
  </div>
  <div class="field">
    <%= f.label :assignee %><br />
    <%= f.select :assignee,@userNames %>
  </div>
  <div class="actions">
    <%= f.submit "Ok" %>
    <%= link_to "Cancel", scenarios_path %>
  </div>
<% end %>
