<h2>Listing Users</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Usertype</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.userType %></td>
    <td align="center"><%= link_to image_tag("show_bw_icon.png", :border => 0,:class => "actionIcon",:alt => "Show"), user %></td>
    <td align="center"><%= link_to image_tag("edit_bw_icon.png", :border => 0,:class => "actionIcon",:alt => "Edit"), edit_user_path(user) %></td>
    <td align="center"><%= link_to image_tag("delete_bw_icon.png", :border => 0,:class => "actionIcon",:alt => "Delete"), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

