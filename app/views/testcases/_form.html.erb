<%= form_for(@testcase) do |f| %>
  <% if @testcase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@testcase.errors.count, "error") %> prohibited this testcase from being saved:</h2>

      <ul>
      <% @testcase.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :scenario_id %><br />
    <%= f.select :scenario_id,Scenario.all.collect{|s| [s.name,s.id]} %>
  </div>
  <div class="field">
    <%= f.label "Test Case" %><br />
    <%= f.text_area :name %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status,@testcase.status_options %>
  </div>
  <div class="field">
    <%= f.label :assignee %><br />
    <%= f.select :assignee,User.all.collect{|u| [u.name,u.name]} %>
  </div>
  <div class="field">
    <%= f.label "Something Changed" %><br />
    <%= f.check_box :somethingChanged %>
  </div>
  <div class="field">
    <%= f.label "Flagged" %><br />
    <%= f.check_box :flagged %>
  </div>
  <div class="actions">
    <%= f.submit "Ok" %>
    <%= link_to "Cancel", testcases_path %>
  </div>
<% end %>
