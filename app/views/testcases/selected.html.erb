<h4>Testcases for Scenario - <%=@scenario[:id]%> :<%= @scenario[:name] %></h4>
<table class="popupContentTable">
  <tr>
    <th>Id</th>
    <th>Test Case</th>
    <th>Scenario</th>
    <th>Status</th>
    <th>Assignee</th>
    <th>Changed?</th>
    <th>Flagged?</th>
  </tr>

<% @testcases.each do |testcase| %>
  <tr>
    <td><%= testcase.id %></td>
    <td><%= testcase.name %></td>
    <td><%= testcase.scenario_id %></td>
    <td><%= testcase.status %></td>
    <td><%= link_to testcase.assignee,user_path(testcase.assignee_id) %></td>
    <td align="center"><% if (testcase.somethingChanged) %>
  			<%= image_tag("ticked_bw_icon.png", :border => 0,:class => "actionIcon",:alt => "Yes") %>
  		<% else %>
  		 	<%= image_tag("crossed_bw_icon.png", :border => 0,:class => "actionIcon",:alt => "No")  %>
  		<% end %>
  	</td>
    <td align="center"><% if (testcase.flagged) %>
  			<%= image_tag("ticked_bw_icon.png", :border => 0,:class => "actionIcon",:alt => "Yes") %>
  		<% else %>
  		 	<%= image_tag("crossed_bw_icon.png", :border => 0,:class => "actionIcon",:alt => "No")  %>
  		<% end %>
  	</td>
  </tr>
<% end %>
</table>

<br />
